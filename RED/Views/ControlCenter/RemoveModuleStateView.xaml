<Window x:Class="RED.Views.ControlCenter.RemoveModuleStateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Remove Module State" WindowStyle="SingleBorderWindow"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock Margin="0 0 0 10">Choose an existing state to remove.</TextBlock>
            <ComboBox SelectedItem="{Binding SelectedItem}" 
                      ItemsSource="{Binding SavedModuleStates, UpdateSourceTrigger=PropertyChanged}" 
                      HorizontalAlignment="Stretch"/>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Right">
                <Button Command="{Binding RemoveStateCommand}" Width="50" Height="25">Remove</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>